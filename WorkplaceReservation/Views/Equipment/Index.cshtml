@model WorkplaceReservation.Models.EquipmentViewModel

@{
    ViewData["Title"] = "Equipments";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>


<table class="table table-bordered table-light">
    <thead class="table-success">
        <tr>
            <th>
                Type
            </th>
            <th>
                <a asp-action="Create" class="btn btn-success btn-sm">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
